# vim: ft=sh sw=2 ts=2 expandtab

# plain lazyness to deal with PATH variable
unset partial_path
push_to_path () {
	if [ -z "${partial_path}" ]; then
		partial_path="${1}"
	else
		partial_path="${partial_path}":"${1}"
	fi
}

export_path () {
	export PATH=${partial_path}
	unset partial_path
}

add_to_path() {
  export PATH="${PATH}":"${1}"
}
