# vim: ft=sh sw=2 ts=2 expandtab

# just reload the profile (mnemonic bulls*)
bs() { echo "Sourcing ~/.bash_profile" && . ~/.bash_profile; }

# simple aliases
alias vb="cd ${BASH_LOAD_ROOT}; vim load_bash; cd -; bs;" # edit these conf files
alias rm='rm -i'
alias mv='mv -i'
alias path='echo -e ${PATH//:/\\n}' # nice path printing
alias jek='gg blog; jekyll --server --pygments'
alias ll='ls -laF'
alias ls='ls -F'
alias vg='vagrant'
alias rb='rbenv'
alias r='rake' 
alias b='bundle'
alias j='jobs'
alias be='bundle exec'
alias ber='bundle exec rake'
alias cdd='cd ~/Downloads'
alias sudo='echo "What are you really trying to do???"'
alias version='echo "bash version: ${BASH_VERSION}"'
alias binstall='bundle check || bundle install --path vendor/bundler'
